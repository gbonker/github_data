

<h2><%= @user.handle %></h2>

<p>
  <%= image_tag @user.avatar_url, style: "height: 100px;" %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Company:</strong>
  <%= @user.company %>
</p>

<%= link_to 'Delete This User', @user, method: :delete, class: "btn btn-warning", data: { confirm: 'Are you sure you want to delete this user?' } %>
